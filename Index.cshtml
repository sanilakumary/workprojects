@model ExpenseCalculatorPresentation.ViewModel.ExpenseCalculatorViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
<script src="//code.jquery.com/jquery-1.10.2.js"></script>
<script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
<!-- jQuery UI CSS Reference -->
<link href="@Url.Content("~/Content/themes/base/minified/jquery-ui.min.css")" rel="stylesheet" />
<!-- Required jQuery and jQuery UI Javascript references -->
<script src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")"></script>
<script src="@Url.Content("~/Scripts/jquery-ui-1.10.4.min.js")"></script>
<!-- Code to wire up your DatePicker -->
<script type="text/javascript">

    $(function () {
        // This should targe the element generated by your EditorFor() Helper
        //$('#ExpenseDate').datepicker().val();
        $('input[type="date"]').datepicker();
    })
    function Confirm() {        
        alert("Expense Record inserted successfully!");        
    }
</script>

@{
    <link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
    using (Html.BeginForm("Create", "ExpenseCalculator", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <form>
        <table>
        <tr>
        <td>Type of Expense </td>
        <td>
            @Html.DropDownList("ddlExpense", new SelectList(Model.ExpenseTypes, "ExpenseTypeId", "ExpenseTypeName"), "Select ExpenseType")
        </td>
            </tr>

            <tr>
            <td>Store Name</td>
            <td>
                @Html.DropDownList("ddlStores", new SelectList(Model.Stores, "StoreId", "StoreName"), "Select Store")
            </td>
            </tr>

           <tr>
           <td>
            @Html.Label("DateofExpense", htmlAttributes: new { @class = "control-label col-md-2" })</td>
                <td>
            @Html.TextBoxFor(Model => Model.ExpenseDatas.expenseDate, new
       {
           @type = "date",
           @Value = ""
       })
              </td> 
             @Html.ValidationMessageFor(Model => Model.ExpenseDatas.expenseDate, "", new { @class = "text-danger" })
                </tr>

                <tr>
                    <td>@Html.Label("Spent Amount")</td>
                    <td>@Html.EditorFor(Model => Model.ExpenseDatas.spentAmount)</td>
                </tr>
                <tr>
                    <td><input type="submit" value="Submit Data" id="Create" onClick="Confirm()"/></td>
                    <td><input type="button" value="Back" id="btnCancel" onclick="location.href='@Url.Action("Home", "ExpenseCalculator")'"/></td>

               </tr>
                </table>

           
</form>
}
    }


    

